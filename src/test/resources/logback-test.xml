<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	
	<property value="c:/temp/logs/sdp-kanal" name="APP_LOG_HOME"/>
	
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</Pattern>
		</layout>
	</appender>
	
	<appender name="applog" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>${APP_LOG_HOME}/kanal.log</File>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</Pattern>
		</layout>
		<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
			<maxIndex>10</maxIndex>
			<FileNamePattern>${LOG_HOME}/sdp-kanal.%i.log</FileNamePattern>
		</rollingPolicy>
		<triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<MaxFileSize>10MB</MaxFileSize>
		</triggeringPolicy>
	</appender>
	
	<logger name="no.nav" level="INFO"/>
	<logger name="no.nav.kanal.camel" level="DEBUG"/>
	<root level="INFO">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="applog" />
	</root>
</configuration>